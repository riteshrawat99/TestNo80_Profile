<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="20dp"
        >

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your OTP"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:textColor="#028f8e"
        android:fontFamily="@font/font3"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/verifyLayoutOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:layout_below="@id/header_title"
        android:layout_margin="10dp"
        app:hintTextColor="#4294FF"
        app:boxStrokeColor="#4294FF"
        app:startIconDrawable="@drawable/phone"
        app:counterMaxLength="6"
        app:counterEnabled="true"
        >
        <EditText
            android:id="@+id/verifyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font3"
            android:textSize="17sp"
            android:inputType="phone"
            android:maxLength="6"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verfiyBtnForOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verifyLayoutOtp"
        android:background="@drawable/custome_btn"
        android:fontFamily="@font/font1"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_close_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>



</androidx.cardview.widget.CardView>